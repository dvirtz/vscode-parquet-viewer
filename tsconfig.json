{
    "references": [
      { "path": "./packages/parquet-reader" }
    ],
    "include": [
      "src/**/*.ts",
      "test/**/*.ts",
      "package.json"
    ],
    "compilerOptions": {
        "composite": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "lib": [
            "es6",
            "DOM"
        ],
        "sourceMap": true,
        "resolveJsonModule": true,
        /* Strict Type-Checking Option */
        "strict": true, /* enable all strict type-checking options */
        /* Additional Checks */
        "noUnusedLocals": true, /* Report errors on unused locals. */
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}
