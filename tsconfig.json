{
    "include": [
        "jest.config.*",
        "src/**/*",
        "test/**/*"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "DOM"
        ],
        "sourceMap": true,
        "resolveJsonModule": true,
        /* Strict Type-Checking Option */
        "strict": true, /* enable all strict type-checking options */
        /* Additional Checks */
        "noUnusedLocals": true, /* Report errors on unused locals. */
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}
