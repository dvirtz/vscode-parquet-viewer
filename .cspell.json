{
    "version": "0.2",
    "language": "en",
    "words": [
        "dvirtz",
        "tempy",
        "Yitzchaki",
        "commitlint"
    ],
    "files": [
        "**/*.ts",
        "**/*.md"
    ],
    "ignorePaths": [
        "node_modules/**"
    ],
    "flagWords": [],
    "languageSettings": [
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "/`.*?`/", // inline code
                "/(```+)\\s?[\\s\\S]+?\\1/g", // code block
                "/'s\\b/", // trailing 's
                "<!--.*?-->" // comments
            ]
        },
        {
            "languageId": "git",
            "ignoreRegExpList": [
                "/#.*/" // comments
            ]
        }
    ]
}
